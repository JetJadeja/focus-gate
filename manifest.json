{
  "manifest_version": 2,

  "name": "reflect.",
  "description": "a mindful website blocker for the productive.",
  "version": "0.0",
  "options_page": "options/options.html",

  "background": {
    "scripts": ["blocker/background.js", "blocker/toggling.js"],
  	"persistent": false
  },
  "icons": {
    "16": "blocker/res/icon.png"
  },
  "browser_action": {
	   "default_icon": "blocker/res/icon.png"
  },
  "permissions": [
    "storage",
  	"tabs",
  	"contextMenus"
  ]
}
