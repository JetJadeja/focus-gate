{
  "manifest_version": 2,

  "name": "reflect.",
  "description": "a mindful website blocker for the productive.",
  "version": "0.0",
  "options_page": "options/options.html",

  "background": {
    "scripts": ["blocker/background.js", "blocker/toggling.js"],
  	"persistent": false
  },
  "icons": {
    "16": "blocker/res/icon.png"
  },
  "browser_action": {
	   "default_icon": "blocker/res/icon.png"
  },
  "permissions": [
    "storage",
  	"tabs",
    "<all_urls>",
  	"contextMenus"
  ],
  "content_scripts": [
    {
    "matches": [
        "http://*/*",
        "https://*/*"
        ],
    "js": ["blocker/content.js"],
    "run_at": "document_end"         // pay attention to this line
    }
  ]
}
